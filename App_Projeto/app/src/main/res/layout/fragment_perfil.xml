<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/ivBannnerPerfil"
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:background="@color/gray" />

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="225dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/ivBannnerPerfil"
        android:layout_alignBottom="@+id/ivBannnerPerfil"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="-72dp"
        android:onClick="EditarPerfil"
        android:src="@drawable/avatar_example" />

    <TextView
        android:id="@+id/textViewSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivBannnerPerfil"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="206dp"
        android:layout_marginBottom="-106dp"
        android:fontFamily="@font/bold"
        android:text="@string/sexo"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textViewSexo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivBannnerPerfil"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="-106dp"
        android:fontFamily="@font/semibold"
        android:text="@string/blank"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textViewDataNasc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewEmail"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="-42dp"
        android:layout_toStartOf="@+id/textViewDataNasc2"
        android:fontFamily="@font/bold"
        android:text="Data de Nascimento:"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textViewDataNasc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewEmail2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="-41dp"
        android:fontFamily="@font/semibold"
        android:text="@string/blank"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivBannnerPerfil"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="-186dp"
        android:layout_toStartOf="@+id/textViewEmail2"
        android:fontFamily="@font/bold"
        android:text="Email:"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textViewEmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivBannnerPerfil"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="-187dp"
        android:fontFamily="@font/semibold"
        android:text="@string/blank"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivBannnerPerfil"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="107dp"
        android:fontFamily="@font/bold"
        android:text="@string/blank"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignBottom="@+id/textViewDataExpirar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="-17dp"
        android:src="@drawable/bordas_subscricao" />

    <TextView
        android:id="@+id/textViewSubscricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewDataNasc"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="-93dp"
        android:fontFamily="@font/bold"
        android:text="Subscrição:"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textViewDataInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewSubscricao"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="322dp"
        android:layout_marginBottom="-34dp"
        android:fontFamily="@font/semibold"
        android:text="@string/blank"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textViewDataExpirar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewDataInicio"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="321dp"
        android:layout_marginBottom="-33dp"
        android:fontFamily="@font/semibold"
        android:text="@string/blank"
        android:textSize="17sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="161dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="-90dp"
        android:layout_toStartOf="@+id/button2"
        android:text="Button1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="161dp"
        android:layout_height="59dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="-86dp"
        android:text="Button2" />

</RelativeLayout>